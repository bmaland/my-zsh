# (-*- shell-script -*-)
# Specific for Arch Linux

export PATH="/opt/java/bin:$PATH"
export PKG_CONFIG_PATH="/usr/local/lib/pkgconfig:$PKG_CONFIG_PATH"

# Functions
remove_orphans() {
  for pkg in `pacman -Qdt|awk -F ' ' '{ printf("%s\n", $1) }'`; do
    sudo pacman -R $pkg
  done
  if [ `pacman -Qdt|wc -l` -gt 0 ]; then remove_orphans; fi
}

# Wrapper for init.d, i.e "service ssh stop"
service() {
  eval "sudo /etc/rc.d/$1 $2"
}

_service() {
  compadd $(ls /etc/rc.d|grep -v functions)
}
compdef _service service

# pacman
alias squ="pacman -Q|grep -i"
alias sse="pacman -Ss |grep -i"
alias sin="sudo pacman -S"
alias sun="sudo pacman -R"
alias sup="sudo pacman -Syu"

# yaourt
alias yqu="yaourt -Q|grep -i"
alias yse="yaourt -Ss"
alias yin="sudo yaourt -S"
alias yun="sudo yaourt -R"
alias yup="sudo yaourt -Syu"
