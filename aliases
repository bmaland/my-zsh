# (-*- shell-script -*-)
# Common aliases

alias ls='ls --color=auto '
alias f="find . |grep -i"
alias h="history"
alias l="less"
alias m="more"
alias c="clear"
alias cl="clear ; ls -laF"
alias cal="cal -m"
alias psg="ps aux | grep"
alias trail="tail -n 300 -f"

alias e=$EDITOR
alias emacs="emacs -nw --no-site-file"
alias vi="vim" # Default to vim

# Ruby
alias irb="irb --readline -r irb/completion"
alias ri="ri -Tf ansi"

# Rails
alias ss="./script/server"
alias sc="./script/console"
alias sg="./script/generate"
alias sp="./script/plugin"
alias devlog="tail -F log/development.log"
alias rem="rake db:migrate VERSION=0 && rake db:migrate"
alias remm="rake db:drop && rake db:create && rake db:migrate"
alias mig="rake db:migrate"

# gem
alias g="gem list -r | grep -i"
alias gin="sudo gem install"
alias gup="sudo gem update"

# git
alias gst="git status"
alias gb="git branch --color"
alias gcm="git commit -a -v"
alias gco="git checkout"

# Global aliases
alias -g ...='../..'
alias -g ....='../../..'
alias -g .....='../../../..'
alias -g DN=/dev/null
alias -g S='| sort'
alias -g H='| head'
alias -g HL='| head -20'
alias -g T='| tail'
alias -g TL='| tail -20'
alias -g VM=/var/log/messages
alias -g C='| wc -l'
alias -g L='|less' # command L equivalent to command |less
alias -g S='&> /dev/null &' # command S equivalent to command &> /dev/null &

# Set up cross platform auto extensions
alias -s {html, php, org, com, net}=$BROWSER
alias -s {txt,PKGBUILD,rb,py,lisp,sml,c,php,js}=$EDITOR
alias -s gz=tar -xzvf
alias -s bz2=tar -xjvf
alias -s zip=unzip
