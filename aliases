# (-*- shell-script -*-)
# Common aliases

alias df="df -h"
alias reload_hist="fc -RI"
alias f="find . |grep -i"
alias h="history"
alias l="less"
alias m="more"
alias c="clear"
alias cl="clear ; ls -laF"
alias cal="cal -m"
alias psg="ps aux | grep"
alias trail="tail -n 300 -f"
alias screen="screen -U"
alias srd="screen -U -r -d"
alias vi="vim" # Default to vim
alias x="exit"

# Ruby
alias irb="irb --readline -r irb/completion"
alias ri="ri -Tf ansi"

# Rails
alias ss="./script/server"
alias ssp="./script/server -eproduction"
alias sc="./script/console"
alias sg="./script/generate"
alias sp="./script/plugin"
alias devlog="tail -F log/development.log"
alias rem="rake db:migrate VERSION=0 && rake db:migrate"
alias remm="rake db:drop && rake db:create && rake db:migrate"
alias rdm="rake db:migrate"
alias rdmp="RAILS_ENV=production rake db:migrate"

# gem
alias gl="gem list"
alias gse="gem list -r | grep -i"
alias gqu="gem list | grep -i"
alias gin="sudo gem install"
alias gun="sudo gem uninstall"
alias gup="sudo gem update"

# git
alias gb="git branch --color"
alias gcm="git commit -a -v"
alias gco="git checkout"

# Global aliases
alias -g ...="../.."
alias -g ....="../../.."
alias -g .....="../../../.."
alias -g G="| grep"
alias -g GI="| grep -i"
alias -g DN=/dev/null
alias -g S="| sort"
alias -g H="| head"
alias -g HL="| head -20"
alias -g T="| tail"
alias -g TL="| tail -20"
alias -g VM=/var/log/messages
alias -g C="| wc -l"
alias -g L="|less" # command L equivalent to command |less
alias -g S="&> /dev/null &" # command S equivalent to command &> /dev/null &

# Set up cross platform auto extensions, for Zsh versions above 4.1.1
if [ $MODERN_ZSH = "t" ]; then
  alias -s tar="tar -xvf"
  alias -s gz="tar -zxvf"
  alias -s bz2="tar -jxvf"
  alias -s zip=unzip
  alias -s txt=less
  alias -s git="git clone"
fi
