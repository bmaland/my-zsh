# (-*- shell-script -*-)

alias s="port list | grep -i"
alias q="port installed active | grep -i"
alias sin="sudo port install"
alias sup="sudo port -d selfupdate && port outdated"

alias o="open"

alias emacs="open -a /Applications/Aquamacs\ Emacs.app/"

export EDITOR=emacs

export FCEDIT=$EDITOR
export SVN_EDITOR=$EDITOR
export VISUAL=$EDITOR

alias e=$EDITOR

export BROWSER="open"

alias -s {php,html,txt,rb,py,lisp,sml,php,js}=$EDITOR

# open ftw
alias -s {org,com,net,doc,odt,rtf,jpeg,jpg,JPEG,JPG,png,gif,xpm,avi,mpg,mpeg,vmw,mov,rm,pdf}=open

# Avoid "unsupported locale"-errors on osx - setting lang vars back to default
export LC_ALL="en_US.UTF-8"
export LANG="en_US.UTF-8"

